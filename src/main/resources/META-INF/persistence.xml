<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
    <persistence-unit name="com.example.mysql" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.example.hs.model.Division</class>
        <class>com.example.hs.model.DivisionText</class>
        <class>com.example.hs.model.LocalizedText</class>
        <class>com.example.hs.model.Inquiry</class>
        <class>com.example.hs.model.InquiryContentText</class>
        <class>com.example.hs.model.InquiryReasonText</class>
        <class>com.example.hs.model.Subordinate</class>
        <class>com.example.hs.model.SubordinateText</class>
        <class>com.example.hs.model.Motif</class>
        <class>com.example.hs.model.MotifText</class>
        
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.password" value="db_passwd"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/exampledb"/>
            <property name="hibernate.connection.username" value="db_user"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
       
            <property name="hibernate.id.new_generator_mappings" value ="true"/> 
            
            <!-- Hibernate Search properties -->
            <property name="hibernate.search.default.directory_provider" value="filesystem"/> 
            <property name="hibernate.search.default.indexBase" value="/var/lucene/indexes"/> 
        </properties>
        
    </persistence-unit> 
</persistence>
